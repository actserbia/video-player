html, body {
  margin: 0;

}
* {
  box-sizing: border-box;
}

.container {
  max-width: 1024px;
  width: 100%;
  margin: 0 auto;
  video {
    width: 100%;
  }
}
.row {
  postition: relative;
  .col-half {
    width: 50%;
    float: left;
    padding: 10px;
  }
  &:after {
    display: table;
    content: " ";
    clear: both;
  }
}
