html, body {
  margin: 0;

}
* {
  box-sizing: border-box;
}

.container {
  max-width: 1024px;
  width: 100%;
  margin: 0 auto;
  video {
    width: 100%;
    display:block;
  }
}
.row {
  postition: relative;
  @media (min-width: 960px) {
    .col-half {
      width: 50%;
      float: left;
      padding: 10px;
    }
  }
  @media not all and (min-width: 960px) {
    .col-half {
      width: 100%;
      float: left;
      padding: 10px;
    }
  }
  &:after {
    display: table;
    content: " ";
    clear: both;
  }
}
